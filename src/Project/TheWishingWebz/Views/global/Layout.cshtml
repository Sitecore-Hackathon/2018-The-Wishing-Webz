@using SC_Context = Sitecore.Context
@using System.Threading

<!DOCTYPE html>
<html lang="@Html.Sitecore().CurrentItem.Language.Name.ToString()">
<head>
    @* Meta *@
    @Html.Sitecore().Placeholder("Meta")
    @* Styles *@
    <!-- Bootstrap core CSS -->
    <link href="/Content/global/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom fonts for this template -->
    <link href="/Content/global/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
