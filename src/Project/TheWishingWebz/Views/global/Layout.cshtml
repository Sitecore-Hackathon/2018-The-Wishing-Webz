    <link href="/Content/global/css/freelancer.min.css" rel="stylesheet">
</head>
<body id="page-top">
    @* Header *@
    @Html.Sitecore().Placeholder("Header")
    @* Content *@
    @Html.Sitecore().Placeholder("Content")
    @* Footer *@
    @Html.Sitecore().Placeholder("Footer")

    @* Scripts *@
    <!-- Bootstrap core JavaScript -->
    <script src="/Content/global/vendor/jquery/jquery.min.js"></script>
    <script src="/Content/global/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
